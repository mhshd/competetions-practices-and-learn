import java.util.Scanner;

public class circula { 
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
             int n = sc.nextInt();
             int k = sc.nextInt();
             int i =0;
             int counter = 1;
             while((i+k)%n != 0){
                 i = k+ i;
                 counter++; 
             }
             System.out.println(counter);          
        }
    }
    
